<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardElevation="6dp"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/search_property_img"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:src="@drawable/house1"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/search_property_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="property Name"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />
                <TextView
                android:id="@+id/search_property_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="property address"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:layout_marginLeft="20dp"/>
                <TextView
                    android:id="@+id/search_property_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="property city"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/search_property_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="property price/month"
                android:textColor="@color/green_light"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textSize="12dp"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>