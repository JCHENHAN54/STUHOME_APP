<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.PropertyDetails"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:background="@color/green_light"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginBottom="0dp"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <ImageView
            android:id="@+id/back_icon"
            android:src="@drawable/baseline_arrow_back_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"/>

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Property Detail"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"/>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp">
        <ImageView
            android:id="@+id/image_property"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/person"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="360dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/image_user_property"
                    android:layout_marginLeft="20dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/chen"/>
                <TextView
                    android:id="@+id/name_user_property"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jiahan Chen"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="15dp"/>
                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_check_circle_24"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/name_property"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Student House"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="22dp"/>
                <TextView
                    android:id="@+id/address_property"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calle casp 122 Tetuan Barcelona"/>
                <TextView
                    android:id="@+id/description_property"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lorem_ipsum"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <!--            &lt;!&ndash;Property Functions&ndash;&gt;-->
            <HorizontalScrollView
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <!-- property air-->
                    <Button
                        android:text="air"
                        android:id="@+id/air_property"
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:textStyle="bold"
                        android:textSize="10dp"
                        android:drawableEnd="@drawable/baseline_air_24"
                        />
                    <!-- property pet-->
                    <Button
                        android:id="@+id/pet_property"
                        android:text="pet"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:drawableEnd="@drawable/baseline_pets_24"
                        android:layout_marginLeft="10dp"
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        />
                    <!-- property parking-->
                    <Button
                        android:text="parking"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:drawableEnd="@drawable/baseline_local_parking_24"
                        android:id="@+id/parking_property"
                        android:layout_marginLeft="10dp"
                        android:layout_width="110dp"
                        android:layout_height="40dp"
                        />
                    <!-- property smoking-->
                    <Button
                        android:drawableEnd="@drawable/baseline_smoke_free_24_white"
                        android:text="smoking"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:id="@+id/smoking_property"
                        android:layout_marginLeft="10dp"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        />
                    <!-- property washer-->
                    <Button
                        android:drawableEnd="@drawable/baseline_water_damage_24_white"
                        android:text="washer"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:id="@+id/washer_property"
                        android:layout_marginLeft="10dp"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        />
                    <!-- property wifi-->
                    <Button
                        android:drawableEnd="@drawable/baseline_wifi_24_white"
                        android:text="wifi"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:id="@+id/wifi_property"
                        android:layout_marginLeft="10dp"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        />
                </LinearLayout>
            </HorizontalScrollView>
            <TextView
                android:id="@+id/characteristics_property"
                android:paddingRight="40dp"
                android:paddingLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/additional_notes_property"
                android:paddingRight="40dp"
                android:paddingLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/additional_notes"/>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="220dp"
            android:layout_height="45dp"
            android:background="@drawable/round_back_green_15"
            android:text="Book Now"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:id="@+id/createProperty_btn"
            />
    </RelativeLayout>

</LinearLayout>